<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.xuqi.qqdemo.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_60" />

    <LinearLayout
        android:id="@+id/register_rl_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <Button
            android:id="@+id/QQ_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_photo"
            android:textColor="@color/white"
            android:drawableTop="@drawable/login_icon_qq"
            android:text="@string/qqbutton"/>

        <Button
            android:id="@+id/Sina_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/login_icon_weibo"
            android:text="@string/sinabutton"/>

        </LinearLayout>
</RelativeLayout>
